<%= form_with model: @profile do |form| %>
  <div class="flex flex-col items-center gap-4 mt-4">
    
    <div class="field">
      <%= form.label :username, class: "label" %>
      <%= form.text_field :username, class: "input" %>
    </div>

    <div class="field">
      <%= form.label :first_name, class: "label" %>
      <%= form.text_field :first_name, class: "input" %>
    </div>

    <div class="field">
      <%= form.label :last_name, class: "label" %>
      <%= form.text_field :last_name, class: "input" %>
    </div>

    <div>
      <%= form.submit "Save", class: "form-button" %>
    </div>
  </div>
<% end %>